<%= form_for @item_new do |f| %>
  <% @item_new.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :money %>
  <%= f.text_field :money %><br>
  <%= f.select :category_id, Category.all.map { |category| [category.name, category.id]} %><br>
  <%= f.label :purchased_at %>
  <%= f.date_field :purchased_at %><br>
  <%= f.submit '保存' %>
<% end %><br>
<%= link_to 'カテゴリ追加', :controller => 'categories', :action => 'new' %><br><br>
  <table>
    <thead>
      <tr>
        <th>日付</th>
        <th>金額</th>
        <th>用途</th>
        <th>カテゴリ</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
<% @item.reverse_each do |item| %>
      <tr>
        <td><%= item.purchased_at %></td>
        <td><%= item.money %></td>
        <td><%= item.name %></td>
        <td><%= item.category.name %></td>
        <td><%= link_to  '削除', item_path(item), method: :delete, confirm: '本当に削除しますか？' %></td>
    </tr>
<% end %> 
   </tbody>
 </table>    
